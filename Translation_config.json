{
    "translation_engines": {

        "openai-gpt": {
            "enabled": false,
            "api_key": "sk-your-openai-api-key-here",
            "base_url": "https://api.openai.com/v1",
            "proxy": null,
            "model": "gpt-4o-mini",
            "temperature": 0.3,
            "max_tokens": 4096,
            "description": "OpenAI GPT翻译服务 - 专业AI翻译，自动检测代理"
        },
        "deepl-api": {
            "enabled": false,
            "api_key": "your-deepl-api-key-here",
            "base_url": "https://api-free.deepl.com/v2/translate",
            "proxy": null,
            "description": "DeepL API翻译服务 - 专业翻译质量"
        },
        "baidu-api": {
            "enabled": true,
            "app_id": "",
            "api_key": "",
            "base_url": "https://fanyi-api.baidu.com/api/trans/vip/translate",
            "proxy": null,
            "description": "百度翻译API - 通用翻译API，只需APPID和密钥"
        },
        "youdao-api": {
            "enabled": false,
            "app_key": "your-youdao-app-key",
            "app_secret": "your-youdao-app-secret",
            "base_url": "https://openapi.youdao.com/api",
            "proxy": null,
            "description": "有道智云翻译API - 专业翻译服务"
        },
        "tencent-api": {
            "enabled": false,
            "secret_id": "your-tencent-secret-id",
            "secret_key": "your-tencent-secret-key",
            "region": "ap-beijing",
            "base_url": "tmt.tencentcloudapi.com",
            "proxy": null,
            "description": "腾讯云翻译API - 企业级翻译服务"
        }
    },
    "default_settings": {
        "quality_mode": "high",
        "preserve_formatting": true,
        "context_aware": true,
        "timeout": 30,
        "retry_count": 3,
        "retry_delay": 1
    },
    "language_mappings": {

        "openai-gpt": {
            "zh-CN": "Chinese (Simplified)",
            "zh-TW": "Chinese (Traditional)",
            "en": "English",
            "ja": "Japanese",
            "ko": "Korean",
            "fr": "French",
            "de": "German",
            "es": "Spanish",
            "it": "Italian",
            "pt": "Portuguese",
            "ru": "Russian",
            "ar": "Arabic"
        },
        "deepl-api": {
            "zh-CN": "ZH",
            "zh-TW": "ZH",
            "en": "EN",
            "ja": "JA",
            "ko": "KO",
            "fr": "FR",
            "de": "DE",
            "es": "ES",
            "it": "IT",
            "pt": "PT",
            "ru": "RU"
        },
        "baidu-api": {
            "zh-CN": "zh",
            "zh-TW": "cht",
            "en": "en",
            "ja": "jp",
            "ko": "kor",
            "fr": "fra",
            "de": "de",
            "es": "spa",
            "it": "it",

    },
    "prompts": {

        "openai-gpt": {
            "system_prompt": "You are a professional translator. Translate the user's text accurately to the target language while preserving the tone, style, and formatting of the original text.",
            "user_prompt_template": "Translate the following {source_lang} text to {target_lang}, maintaining the original formatting and tone:\n\n{text}\n\nPlease return only the translation without any explanations."
        }
    }
}
